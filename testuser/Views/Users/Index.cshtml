<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            @*<div class="modal-header">

                </div>*@

            <div class="modal-body">
                @*<h5 style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Registrar un nuevo usuario</h5>*@

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

                <div id="contenidoUsuario">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-left:80%;">Cerrar</button>
                </div>
            </div>
            @*<div class="modal-footer">
                </div>*@
        </div>
    </div>
</div>
@section scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            var espanol =
            {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Cantidad de registros _MENU_",
                "sZeroRecords": "No se encontraron resultados",
                "sEmptyTable": "Ningún dato disponible en esta tabla",
                "sInfo": "Registros del _START_ al _END_ de un total de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                "sInfoPostFix": "",
                "sSearch": "Buscar:",
                "sUrl": "",
                "sInfoThousands": ",",
                "sLoadingRecords": "Cargando...",
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                },
                "oAria": {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }

            };

            $('#dtTables').DataTable({
                language: espanol,
                "dom": '<"dt-buttons"Bf><"clear">lirtp',
                "paging": true,
                "autoWidth": true,
                "buttons": [
                    'colvis',
                    'copyHtml5',
                    'csvHtml5',
                    'excelHtml5',
                    'pdfHtml5',
                    'print'
                ]
            });
            
            /*iziModal*/
            $("#modal").iziModal({
                title: ' ',
                headerColor: '#1D1953'
            });
            /*Fin iziModal*/

            /*Chart.js*/
            var ctx = document.getElementById("myChart").getContext('2d');

            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ["Administrador", "Notario", "Digitador Notario", "Abogados","Digitador Abogado", "Observadores"],
                    datasets: [{
                        label: '# de roles asignados',
                        data: [@ViewBag.Ad, @ViewBag.No, @ViewBag.UsDi, @ViewBag.Ab,@ViewBag.DiAb, @ViewBag.Ob],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(255, 206, 60, 0.2)',
                            'rgba(255, 106, 60, 0.2)',
                            'rgba(75, 192, 192, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(255, 206, 66, 1)',
                            'rgba(255, 106, 86, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    },
                    title: {
                        display: true,
                        text: 'Grafica de usuarios con roles asignados',
                        fontSize: 20
                    },
                    legend: {
                        display: false
                    }
                }
            });
            /*fin Chart.js*/

            /*Boton agregar usuario*/
            $(".btnAgregarUser").click(function () {
                $("#contenidoUsuario").load("/Account/Register/", function () {
                    $('#exampleModal').modal("show");
                });
            });

            $(".btnCambiarEstado").click(function () {
            swal({
                title: "¿Estás seguro de que deseas cambiar el estado de este usuario?",
                text: "Si el estado es Inactivo no podrá iniciar sesión en la aplicación",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        var url = "@Url.Action("CambiarEstado", "Manage")";
                        var idasp = $(this).data("value");

                        var data = {
                            id: idasp
                        }

                        $.post(url, data).done(function (data) {
                            var url = "/Users/Index/";

                            window.location.href = url;
                        });
                    } else {

                    }
                });

            });   

            
        });
    </script>
}