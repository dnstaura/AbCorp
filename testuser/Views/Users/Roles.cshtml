@model testuser.Models.UserView

@{
    ViewBag.Title = "Roles";
}

<div class="row">
    <div class="col-lg-offset-4 col-sm-4">
        <div class="box box-default">
            <div class="box-header">
                <h4 class="box-title text-bold text-info">Asignar roles para: @Model.Name</h4>
            </div>

            <div class="box-body">
                <p>
                    @Html.ActionLink("Agregar Rol", "AddRole", new { userID = Model.UserID }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Regresar a la lista", "Index", new { }, new { @class = "btn btn-info" })
                </p>
                <table class="table">
                    @for (int i = 0; i < Model.Roles.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
                            </td>
                            <td>
                                @Html.ActionLink("Eliminar", "Delete", new { userID = Model.UserID, roleID = Model.Roles[i].RoleID }, new { @class = "btn btn-danger pull-right" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>






