@model IEnumerable<testuser.Models.SysModel.tblDepartamentos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-offset-3 col-sm-6">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title text-info">Listado de departamentos</h4>
            </div>
            <div class="box-body table-responsive">
                <p>
                    @Html.ActionLink("Nuevo registro", "Create",new { },new { @class="btn bg-navy"})
                </p>
                <table class="table table-hover table-striped table-condensed">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Departamento)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Departamento)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.Id_Departamento }   ,new{@class= "fa fa-edit btn bg-teal" }) |
                                @Html.ActionLink(" ", "Details", new { id = item.Id_Departamento },new{@class= "fa fa-folder-open btn bg-navy" }) |
                                @Html.ActionLink(" ", "Delete", new { id = item.Id_Departamento } ,new { @class = "fa fa-trash btn bg-red" })
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div>

