@using Microsoft.AspNet.Identity
@{

    var cumpleanosxdxd = testuser.ViewModels.CumpleaniosView.cumpleanosAF();
    var cumpleanosOT = testuser.ViewModels.CumpleaniosView.cumpleanosOT();
    var cumpleanosEM = testuser.ViewModels.CumpleaniosView.cumpleanosEMP();
    var cumpleanosCLI = testuser.ViewModels.CumpleaniosView.cumpleanosCLI();

}
<script src="~/Content/js/plugins/jquery/jquery-3.3.1.js"></script>

<li class="dropdown notifications-menu">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">

            <i class="fa fa-gift" style="font-size:18px;">
            </i>

            <span class="label label-info" style="font-family:'Century Gothic', Times, serif; font-size:13px;">
            @{ 
                var suma = cumpleanosxdxd.Count() + cumpleanosOT.Count() + cumpleanosEM.Count() + cumpleanosCLI.Count();
            }
                @suma
            </span>

        </a>
        <ul class="dropdown-menu">

            @if (suma > 0 )
            {
                <li class="header text-bold">Tienes @suma Cumpleaños proximos</li>
            }
            else
            {
                <li class="header text-bold">Tienes 0 cumpleaños pendientes</li>

            }

            <li>
                <ul class="menu" id="">

                    @foreach (var item in cumpleanosxdxd)
                    {
                        <li>
                            <a style="font-size:12px;">
                                <i class="fa fa-birthday-cake text-aqua"></i>
                                @if (item.dias == 0)
                                {
                                    <label>Hoy es el cumpleaños de: <br /> @item.nombreCliente</label>
                                }
                                else
                                {
                                    <label>@item.nombreCliente <br /> cumple años en @item.dias días</label>
                                }
                            </a>
                        </li>
                    }
                    @foreach (var item in cumpleanosOT)
                    {
                        <li>
                            <a style="font-size:12px;">
                                <i class="fa fa-birthday-cake text-aqua"></i>
                                @if (item.dias == 0)
                                {
                                    <label>Hoy es el cumpleaños de: <br /> @item.nombreCliente</label>
                                }
                                else
                                {
                                    <label>@item.nombreCliente <br /> cumple años en @item.dias días</label>
                                }
                            </a>
                        </li>
                    }
                    @foreach (var item in cumpleanosEM)
                    {
                        <li>
                            <a style="font-size:12px;">
                                <i class="fa fa-birthday-cake text-aqua"></i>
                                @if (item.dias == 0)
                                {
                                    <label>Hoy es el cumpleaños de: <br /> @item.nombreCliente</label>
                                }
                                else
                                {
                                    <label>@item.nombreCliente <br /> cumple años en @item.dias días</label>
                                }
                            </a>
                        </li>
                    }
                    @foreach (var item in cumpleanosCLI)
                    {
                        <li>
                            <a style="font-size:12px;">
                                <i class="fa fa-birthday-cake text-aqua"></i>
                                @if (item.dias == 0)
                                {
                                    <label>Hoy es el cumpleaños de: <br /> @item.nombreCliente</label>
                                }
                                else
                                {
                                    <label>@item.nombreCliente <br /> cumple años en @item.dias días</label>
                                }
                            </a>
                        </li>
                    }

                </ul>
            </li>
            @*<li class="footer">
            @Html.ActionLink("Ver todas", "VerNotificaciones", "Manage")
        </li>*@
        </ul>
    </li>


