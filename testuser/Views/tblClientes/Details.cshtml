@model testuser.Models.SysModel.tblClientes

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .shadow {
        -webkit-box-shadow: 0px 0px 14px 0px rgba(0,0,0,0.40);
        -moz-box-shadow: 0px 0px 14px 0px rgba(0,0,0,0.40);
        box-shadow: 0px 0px 14px 0px rgba(0,0,0,0.40);
    }
</style>
<div class="row">

    <div class="col-lg-offset-4 col-sm-3">
        <div class="box box-info shadow">
            <div class="box-header">
                <h4 class="box-title text-info"><strong>Detalles de "Clientes"</strong></h4>
            </div>

            <div class="box-body">
                <div>
                    <hr style="margin-top:-10px;" />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.tblEstadosRegistros.Estado)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tblEstadosRegistros.Estado)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Nombres)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nombres)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Apellidos)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Genero)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Genero)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Fecha_Nacimiento)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fecha_Nacimiento)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Telefono)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Direccion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Correo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Correo)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Fecha_Agregado)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Fecha_Agregado)
                        </dd>

                    </dl>
                </div>
                <p>
                    @{
                        if (User.IsInRole("Administrador") || User.IsInRole("Abogado"))
                        {
                            @Html.ActionLink("Editar", "Edit", new { id = Model.Id_Cliente }, new { @class = "btn bg-orange" })
}
                    }

                    @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-default" })
                </p>
            </div>
        </div>
    </div>

</div>