@{ 
    if (User.IsInRole("Administrador") || User.IsInRole("Abogado") || User.IsInRole("Observador"))
    {
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-md-6 col-xs-12">
        <div class="box box-primary shadow">
            <div class="box-header">
                <h4 class="box-title text-info"><strong>Juzgados</strong></h4>
                <div class="box-tools">
                    @*<div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="buscar" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>*@
                </div>
            </div>
            <div class="box-body table-responsive">
                @{
                    if (User.IsInRole("Administrador") || User.IsInRole("Abogado"))
                    {
                        <p>
                            @Html.ActionLink("Nuevo registro", "Create", new { }, new { @class = "btn bg-navy" })
                        </p>
                    }
                }

                <table class="table table-striped table-condensed" id="dtTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.tblDepartamentos.Departamento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tblMunicipios.Municipio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Juzgado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.correo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.direccion)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblDepartamentos.Departamento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblMunicipios.Municipio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Juzgado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.correo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.direccion)
                            </td>
                            <td>
                                @{
                                    if (User.IsInRole("Administrador"))
                                    {
                                        @Html.ActionLink(" ", "Edit", new { id = item.Id_Juzgado }, new { @class = "fa fa-edit btn bg-teal" })

                                        @Html.ActionLink(" ", "Details", new { id = item.Id_Juzgado }, new { @class = "fa fa-folder-open btn bg-navy" })

                                        @Html.ActionLink(" ", "Delete", new { id = item.Id_Juzgado }, new { @class = "fa fa-trash btn bg-red" })

                                    }
                                    if (User.IsInRole("Abogado"))
                                    {
                                        @Html.ActionLink(" ", "Edit", new { id = item.Id_Juzgado }, new { @class = "fa fa-edit btn bg-teal" })

                                        @Html.ActionLink(" ", "Details", new { id = item.Id_Juzgado }, new { @class = "fa fa-folder-open btn bg-navy" })
                                    }
                                    if (User.IsInRole("Observador"))
                                    {
                                        @Html.ActionLink(" ", "Details", new { id = item.Id_Juzgado }, new { @class = "fa fa-folder-open btn bg-navy" })

                                    }
                                }

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-3"></div>
</div>
    }
    if (User.IsInRole("digitadorabogado"))
    {
<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-md-6 col-xs-12">
        <div class="box box-primary shadow">
            <div class="box-header">
                <h4 class="box-title text-info"><strong>Juzgados</strong></h4>
                <div class="box-tools">
                    @*<div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="buscar" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>*@
                </div>
            </div>
            <div class="box-body table-responsive">
                        <p>
                            @Html.ActionLink("Nuevo registro", "Create", new { }, new { @class = "btn bg-navy" })
                        </p>

                <table class="table table-striped table-condensed" id="dtTablee">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.tblDepartamentos.Departamento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tblMunicipios.Municipio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Juzgado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.correo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.direccion)
                            </th>
                            <th>Acciones</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblDepartamentos.Departamento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblMunicipios.Municipio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Juzgado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.correo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.direccion)
                            </td>
                            <td>
                                        @Html.ActionLink(" ", "Details", new { id = item.Id_Juzgado }, new { @class = "fa fa-folder-open btn bg-navy" })
                            </td>
