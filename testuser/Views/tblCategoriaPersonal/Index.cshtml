                        </div>
                    </div>*@
                    </div>
                </div>
                <div class="box-body table-responsive">
                    <p>
                        @Html.ActionLink("Nuevo registro", "Create", new { }, new { @class = "btn bg-navy" })
                    </p>
                    <br />
                    <table class="table table-striped table-hover table-condensed" id="dtTable">
                        <thead>

                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.CategoriaPersonal)
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategoriaPersonal)
                                </td>
                                <td>
                                    @Html.ActionLink(" ", "Edit", new { id = item.id_CategoriaPersonal }, new { @class = "fa fa-edit btn bg-teal" }) |

                                    @Html.ActionLink(" ", "Details", new { id = item.id_CategoriaPersonal }, new { @class = "fa fa-folder-open btn bg-navy" }) |

                                    @Html.ActionLink(" ", "Delete", new { id = item.id_CategoriaPersonal }, new { @class = "fa fa-trash btn bg-red" })

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>



