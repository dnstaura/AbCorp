    .dataTables_filter {
        margin-right: 5%;
    }
</style>

    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h4 class="box-title text-info"><strong>Listado de "Categoria personal" </strong></h4>
                    <div class="box-tools">
