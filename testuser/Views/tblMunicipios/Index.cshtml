@model IEnumerable<testuser.Models.SysModel.tblMunicipios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-offset-3 col-sm-6">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title text-info">Listado de municipios</h4>
            </div>
            <div class="box-body table-responsive">
                <p>
                    @Html.ActionLink("Nuevo registro", "Create",new {},new { @class="btn bg-navy"})
                </p>
                <table class="table table-condensed table-striped hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.tblDepartamentos.Departamento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Municipio)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tblDepartamentos.Departamento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Municipio)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.id_Municipio }     ,new{@class="fa fa-edit btn bg-orange"}) |
                                @Html.ActionLink(" ", "Details", new { id = item.id_Municipio },new{@class="fa fa-folder-open btn bg-navy"}) |
                                @Html.ActionLink(" ", "Delete", new { id = item.id_Municipio } ,new{@class="fa fa-trash btn bg-red"})
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div>
                