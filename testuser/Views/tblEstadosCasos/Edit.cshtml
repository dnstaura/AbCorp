@model testuser.Models.SysModel.tblEstadosCasos

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title text-info"><strong>Editar informacion de Estado de Casos</strong></h4>
            </div>

            <div class="box-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr style="margin-top:-10px" />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id_EstadoCaso)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Nombre_Estado, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Nombre_Estado, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nombre_Estado, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
    <div class="col-sm-4"></div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
