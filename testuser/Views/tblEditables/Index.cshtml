@model IEnumerable<testuser.Models.SysModel.tblEditables>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/datatables.min.css" rel="stylesheet" />
<script src="~/Content/js/plugins/jquery/jquery-3.3.1.js"></script>
<script src="~/Content/datatables.min.js"></script>

<style>
    .dataTables_length {
        margin-left: 2%;
    }

    .dataTables_filter {
        margin-right: 5%;
    }
</style>

<div class="row">
    <div class="col-lg-offset-1 col-xs-12 col-md-10">
        <div class="box box-primary">
            <div class="box-header">
                <h4 class="box-title text-info"><strong>Categorias de Casos </strong></h4>
                <div class="box-tools">
                    @*<div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" name="buscar" class="form-control pull-right" placeholder="Search">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                            </div>
                        </div>*@
                </div>
            </div>
            <div class="box-body table-responsive">
                <p>
                    @Html.ActionLink("Nuevo registro", "Create", new { }, new { @class = "btn bg-navy" })
                </p>
                <table class="table table-hover table-striped" id="dtTable">
                    <thead>

                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.entidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.instrumento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.documento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.tipo_documento)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.img)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.descripcion)
                            </th>
                            <th></th>
                        </tr>

                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecha)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.entidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.instrumento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.documento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tipo_documento)
                            </td>
                            <td>
                                <a href="@Html.DisplayFor(modelItem => item.img)" class="btn bg-green fa fa-eye" target="_blank"></a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descripcion)
                            </td>
                            <td>
                                @Html.ActionLink(" ", "Edit", new { id = item.idEditable }, new { @class = "fa fa-edit btn bg-teal" }) |

                                @Html.ActionLink(" ", "Details", new { id = item.idEditable }, new { @class = "fa fa-folder-open btn bg-navy" }) |

                                @Html.ActionLink(" ", "Delete", new { id = item.idEditable }, new { @class = "fa fa-trash btn bg-red" })

                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        var espanol =
        {
            "sProcessing": "Procesando...",
            "sLengthMenu": "Cantidad de registros _MENU_",
            "sZeroRecords": "No se encontraron resultados",
            "sEmptyTable": "Ningún dato disponible en esta tabla",
            "sInfo": "Registros del _START_ al _END_ de un total de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
            "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sInfoPostFix": "",
            "sSearch": "Buscar:",
            "sUrl": "",
            "sInfoThousands": ",",
            "sLoadingRecords": "Cargando...",
            "oPaginate": {
                "sFirst": "Primero",
                "sLast": "Último",
                "sNext": "Siguiente",
                "sPrevious": "Anterior"
            },
            "oAria": {
                "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                "sSortDescending": ": Activar para ordenar la columna de manera descendente"
            }

        };

        $('#dtTable').DataTable({
            responsive: true,
            language: espanol,
        });


    });
</script>
